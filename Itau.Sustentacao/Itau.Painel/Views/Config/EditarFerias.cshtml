@using Itau.Common
@model List<Itau.Models.Ferias>

<div class="container bg-light">

    <div class="row">
        <div class="col-md">
            @Html.ActionLink("Voltar", "EditarSquad", "Config", new { equipe = ViewBag.equipe }, new { @class = "btn btn-primary mt-2 mb-4" })
        </div>
    </div>

    <div class="row">
        <div class="col-md">
            <h3>Férias</h3>

            <div class="container">
                <div class="row">
                    <div class="col-sm-3">
                        <span class="font-weight-bold">Nome</span>
                    </div>
                    <div class="col-sm-3">
                        <span class="font-weight-bold">Tipo</span>
                    </div>
                    <div class="col-sm-3">
                        <span class="font-weight-bold">Data</span>
                    </div>
                    <div class="col-sm-3">
                        <span></span>
                    </div>
                </div>

                @foreach (Itau.Models.Ferias item in Model)
                {
                    <div class="row">
                        <div class="col-sm-3">
                            <span>@item.Nome</span>
                        </div>
                        <div class="col-sm-3">
                            <span>@item.Tipo</span>
                        </div>
                        <div class="col-sm-3">
                            <span>@item.DataDisplay</span>
                        </div>
                        <div class="col-sm-3">
                            @Html.ActionLink("Excluir", "ExcluirFerias", "Config", new { equipe = ViewBag.equipe, nome = item.Nome }, new { @class = "btn btn-primary mb-1" })
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-md">
            <h3>Novo Item</h3>

            @using (Html.BeginForm("CriarEditarFerias",
                "Config",
                new { equipe = ViewBag.equipe },
                FormMethod.Post))
            {
            <div class="form-group">
                <label for="Nome">Nome</label>
                <input type="text" name="Nome" class="form-control" placeholder="Nome" />

                <label for="DataInicio">Data Inicio</label>
                <input type="text" id="datepickerInicio" name="DataInicio" class="form-control" placeholder="Data Inicio" />

                <label for="DataFim">Data Fim</label>
                <input type="text" id="datepickerFim" name="DataFim" class="form-control" placeholder="Data Fim" />

                <label for="Tipo">Tipo</label>
                <select class="form-control" name="Tipo">
                    <option value=""></option>
                    <option value="Férias">Férias</option>
                    <option value="Maternidade">Maternidade</option>
                    <option value="Licença">Licença</option>
                </select>            

                <button type="submit" value="submit" class="btn btn-primary mt-2">Salvar</button>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-warning mt-2" role="alert">
                        Erro ao criar Ausência: @Html.ValidationMessage("Error")
                    </div>
                }
            </div>
            }


        </div>
    </div>
</div>

@section scripts {

    <script type="text/javascript">

        $(document).ready(function () {           
            $("#datepickerInicio").datepicker();
            $("#datepickerFim").datepicker();
        });
    </script>

}





